<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:PoTTr.GUI.ViewModels;assembly=PoTTr.GUI"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PoTTr.GUI.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="PoTTr.GUI">

  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>
  <DockPanel>
    <Menu DockPanel.Dock="Top">
      <MenuItem Header="_File">
        <MenuItem Header="_New Project"/>
        <MenuItem Header="_Open Project"/>
        <Separator/>
        <MenuItem Header="_Export" />
        <Separator />
        <MenuItem Header="_Quit" />
      </MenuItem>
      <MenuItem Header="_Edit">
        <MenuItem Header="_Copy" />
        <MenuItem Header="C_ut"/>
        <MenuItem Header="_Paste"/>
      </MenuItem>
      <Separator/>
      <MenuItem Header="_Help">
        <MenuItem Header="_About PoTTr" />
      </MenuItem>
    </Menu>
    <TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
  </DockPanel>
</Window>
